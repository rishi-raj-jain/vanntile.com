---
export enum DIRECTION {
  LEFT = 'left',
  RIGHT = 'right',
}

interface Props {
  direction: DIRECTION
  link: string
  title: string
}

const { direction, link, title } = Astro.props as Props
const description = direction === DIRECTION.LEFT ? 'Previous article' : 'Next article'
---

<div class="flex w-full flex-row justify-between pb-4">
  <span>{description}</span>
  <span>
    <a href={link}>{title}</a>
    <svg
      class="ml-2 inline-block animate-pulse"
      aria-hidden="true"
      focusable="false"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      width="24"
      height="24"
    >
      <path
        fill="currentColor"
        transform={direction === DIRECTION.LEFT ? 'rotate(-180 12 12)' : ''}
        d="M5 13h11.86l-3.63 4.36a1 1 0 0 0 1.54 1.28l5-6a1.19 1.19 0 0 0 .09-.15c0-.05.05-.08.07-.13A1 1 0 0 0 20 12a1 1 0 0 0-.07-.36c0-.05-.05-.08-.07-.13a1.19 1.19 0 0 0-.09-.15l-5-6A1 1 0 0 0 14 5a1 1 0 0 0-.64.23 1 1 0 0 0-.13 1.41L16.86 11H5a1 1 0 0 0 0 2z"
      ></path>
    </svg>
  </span>
</div>
