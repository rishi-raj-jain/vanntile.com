---
const { title, items = [], negative } = Astro.props
---

<div class={`reason-list ${negative ? 'negative' : ''}`}>
  <p>{title}</p>
  <ul>
    {
      items.map((s: string) => (
        <li>
          <svg class={`${negative ? 'negative' : ''}`} viewBox="0 0 24 24" aria-hidden="true">
            <g fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 11-5.93-9.14" />
              <path d="M22 4L12 14.01l-3-3" />
            </g>
          </svg>
          <span>{s}</span>
        </li>
      ))
    }
  </ul>
</div>
