---
interface Props {
  tags: string[]
  class?: string
}

const { tags, class: styles } = Astro.props as Props
---

<div class={`pb-2 overflow-hidden flex flex-row flex-wrap gap-2`}>
  {tags.map((s: string) => (
    <span class={`px-4 py-2 whitespace-nowrap text-sm font-semibold rounded ${styles}`}>{s}</span>
  ))}
</div>
