---
interface Props {
  color: string
}

const { color } = Astro.props as Props
---

<div class="section-divider">
  <svg
    aria-hidden="true"
    focusable="false"
    xmlns="http://www.w3.org/2000/svg"
    preserveAspectRatio="none"
    version="1.1"
    viewBox="0 0 2560 110"
    x="0"
    y="0"
  >
    <polygon class={color} transform="translate(0 10)" points="2560 0 2560 110 0 110 0 100"></polygon>
  </svg>
</div>
