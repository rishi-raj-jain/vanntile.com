      tabNames.map((tabName, idx) => (
        <li
          class={`${
            idx === 0 ? 'bg-brand' : 'border-b-2'
          } mb-0 ml-0 mt-0 list-none px-5 py-2 font-bold focus:outline-white`}
          role="tab"
          id={`${prefix}-tab-${idx * 2}`}
          aria-selected={idx === 0}
          aria-disabled="false"
          aria-controls={`${prefix}-tabpanel-${idx * 2 + 1}`}
          tabindex={idx === 0 ? 0 : -1}
