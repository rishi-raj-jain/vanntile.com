{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "@vcomponents/*": [
        "components/*"
      ],
      "@vlib/*": [
        "lib/*"
      ],
      "@vstyles/*": [
        "styles/*"
      ],
      "@vtypes/*": [
        "types/*"
      ]
    }
  },
  "exclude": [
    ".vscode",
    "node_modules",
    "public",
    "styles"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
