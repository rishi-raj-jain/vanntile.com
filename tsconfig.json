{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "@vcomponents": [
        "components/index.ts"
      ],
      "@vlib/*": [
        "lib/*"
      ],
      "@vstyles/*": [
        "styles/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "exclude": [
    ".vscode",
    "node_modules",
    "public",
    "styles",
    "snippets"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/index.d.ts",
    "types/modules.d.ts"
  ]
}
